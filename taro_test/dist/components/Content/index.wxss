
.announcement-content-component {
  width: 100%;
}
.announcement-content-component-rich-text-wrapper {
  background-color: #F8F8F8;
  border: solid 1PX #E0E0E0;
  border-radius: 2PX;
  position: relative;
  height: 110rpx;
}
.announcement-content-component-rich-text-wrapper-image {
  display: inline-block;
  width: 110rpx;
  height: 110rpx;
  background-size: cover;
  background-position: center;
  background-repeat: no-repeat;
}
.announcement-content-component-rich-text-wrapper-title {
  position: absolute;
  left: 133rpx;
  right: 33rpx;
  top: 0;
  bottom: 0;
  overflow: hidden;
  -o-text-overflow: ellipsis;
     text-overflow: ellipsis;
  white-space: nowrap;
  font-size: 28rpx;
  color: #707070;
  line-height: 110rpx;
}
